<?xml version="1.0" encoding="utf-8"?>
<manifest package="org.ricts.abstractmachine"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.activities.MemoryTutorialActivity">
        </activity>
        <activity
            android:name=".ui.activities.TestActivity">
        </activity>
        <activity
            android:name=".ui.activities.VonNeumannActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".ui.activities.HarvardActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".ui.activities.MemoryPortMultiplexerTutorialActivity"
            android:label="@string/title_activity_memory_port_multiplexer_tutorial"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".ui.activities.CpuConfigureActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activities.InstrMemoryDialogActivity"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>
        <activity
            android:name=".ui.activities.DataMemoryDialogActivity"
            android:launchMode="singleTop"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>
        
        <provider
            android:name=".ui.search.OperandContentProvider"
            android:authorities="org.ricts.abstractmachine.provider" />
    </application>

</manifest>

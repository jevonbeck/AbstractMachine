<?xml version="1.0" encoding="utf-8"?>
<manifest package="org.ricts.abstractmachine"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.activities.MemoryTutorialActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".ui.activities.TestActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".ui.activities.VonNeumannActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".ui.activities.HarvardActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".ui.activities.MemoryPortMultiplexerTutorialActivity"
            android:label="@string/title_activity_memory_port_multiplexer_tutorial"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".ui.activities.CpuConfigureActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>
